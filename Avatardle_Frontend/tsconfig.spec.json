{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./out-tsc/spec",
      "types": [
        "jasmine",
        "node"
      ],
      "esModuleInterop": true,
      "allowJs": false,
      "target": "es2022",
      "module": "es2022",
      "moduleResolution": "bundler",
      "strict": true
    },
    "include": [
      "src/**/*.spec.ts",
      "src/**/*.d.ts"
    ]
  }